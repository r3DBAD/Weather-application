QPushButton {
    background-color: rgba(255, 255, 255, 220); 
    border-radius: 30px;
    border: 2px solid rgba(0, 0, 0, 50);
}
QPushButton:hover {
    background-color: rgba(200, 200, 200, 255);
}
QPushButton:pressed {
    background-color: rgba(180, 180, 180, 255);
}

