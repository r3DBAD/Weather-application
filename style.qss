QWidget {
    background-color: #2b2b2b;
    color: #ffffff;
}
QLabel {
    margin: 10px;
}
QLineEdit {
    padding: 10px;
    border-radius: 5px;
    border: 2px solid #555555;
    background-color: #3b3b3b;
    color: #ffffff;
}
QPushButton {
    padding: 10px;
    border-radius: 5px;
    background-color: #0078d7;
    color: #ffffff;
    font-weight: bold;
    font-size: 14px;
}
QPushButton:hover {
    background-color: #005a9e;
}